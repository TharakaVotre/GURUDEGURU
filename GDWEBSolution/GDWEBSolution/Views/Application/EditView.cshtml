@model GDWEBSolution.Models.Application.ApplicationModel


<div>

    <form  action="~/Application/Edit" method="post">
        <fieldset>
            

            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Edit Application Status</h4>
            </div>
            
                @Html.HiddenFor(model => model.AppStatusSeqNo)
            
            <div class="modal-body">
                <div class="form-group">
                    @Html.LabelFor(m => m.Remarks, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-8">
                        @Html.TextAreaFor(model => model.Remarks, new { @class = "form-control", @placeholder = "Due Date" })
                        <span class="help-block m-b-none" id="DueDateError"></span>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.StatusCode, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-8">
                        @Html.DropDownList("StatusCode")
                        <span class="help-block m-b-none" id="GradeIdError"></span>
                    </div>
                </div>


                <div class="form-group">
                    @Html.LabelFor(m => m.RefNo, new { @class = "col-sm-3 control-label" })
                    <div class="col-sm-8">
                        @Html.TextBoxFor(model => model.RefNo, new { @class = "form-control", @placeholder = "Batch No" })
                        <span class="help-block m-b-none" id="BatchNoError"></span>
                    </div>
                </div>
               
            </div>
          
            <div class="modal-footer" style="border-top: 1px solid #ffffff">
                <input type="submit" class="btn btn-primary" />
            </div>
        </fieldset>
    </form>
    


</div>




