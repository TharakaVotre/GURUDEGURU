            $.each(data, function (ActivityCode, option) {
                ddlStates.append($('<option></option>').val(option.ClassId).html(option.ClassName));

            });

        },
        error: function (xhr, ajaxOptions, thrownError) {
            alert('Failed to retrieve states.');

        }
        });
    }

