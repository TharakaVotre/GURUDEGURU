@model GDWEBSolution.Models.Report.StudentReportModel


<div>
    <form id="myForm" class="form-horizontal">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Edit Student Mark </h4>
        </div>
        <div class="modal-body">
           <div class="form-horizontal">
               <div class="form-group">
                   @Html.HiddenFor(model=>model.Seq);
                   @Html.LabelFor(m => m.StudentId, new { @class = "col-sm-3 control-label" })
                   <div class="col-sm-8">
                       @Html.TextBoxFor(model => model.StudentId, new { @class = "form-control", @placeholder = "Application Status" })
                       
                   </div>
               </div>
            <div class="form-group">

                @Html.LabelFor(m => m.StudentName, new { @class = "col-sm-3 control-label" })
                <div class="col-sm-8">
                    @Html.TextBoxFor(model => model.StudentName, new { @class = "form-control", @placeholder = "Application Status" })
                    
                </div>
            </div>
               <div class="form-group">

                   @Html.LabelFor(m => m.Mark, new { @class = "col-sm-3 control-label" })
                   <div class="col-sm-8">
                       @Html.TextBoxFor(model => model.Mark, new { @class = "form-control", @placeholder = "Application Status",@type="number",@max="100",@min="0" })
                       <span class="help-block m-b-none" id="MarkError"></span>
                   </div>
               </div>

            </div>
        <div class="modal-footer">

            <a href="#" id="btnSubmit" class="btn btn-primary">Save</a>
        </div>
    </form>

  

</div>
<script>

    $(document).ready(function () {

        $("#btnSubmit").click(function (e) {
            debugger
            var Mark = $('#Mark');
            var Error = $('#MarkError');
            var marks = document.getElementById("Mark").value;

            if (Mark == "") {
            //    // Add errors highlight
                Mark.closest('.form-group').removeClass('has-success').addClass('has-error');
                $("#MarkError").text("Required");
            //    // Stop submission of the form
            //  //  e.preventDefault();
                return;
            }
            if (marks > 100) {
                //    // Add errors highlight
                Mark.closest('.form-group').removeClass('has-success').addClass('has-error');
                $("#MarkError").text("Less than 100");
                //    // Stop submission of the form
                //  //  e.preventDefault();
                return;
            }
            //$("#loaderDiv").show();

            var myformdata = $("#myForm").serialize();
            //if (!$("#myForm").valid()) {

            //    return false;
            //}
            $.ajax({

                type: "POST",
                url: "/EveluationAddMark/Edit",
                data: myformdata,
                success: function () {
                    //$("#loaderDiv").hide();
                    $("#myModal").modal("hide");
                    window.location.href = "/EveluationAddMark/EditStudentResult";

                }

            })
        })

    })


</script>

