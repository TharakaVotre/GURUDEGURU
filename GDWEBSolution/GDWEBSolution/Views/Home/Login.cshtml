                </div>
            </div>
        </div>
    </div>

    <script>

        var Login = function () {
            var myformdata = $("#FrmLOG").serialize();

            if (!$("#FrmLOG").valid()) {
                return false;
            }
            //$("#loaderDiv").show();
            //$("#btnCreateTeacher").prop('value', 'Saving');
            $.ajax({

                type: "POST",
                url: "/Home/Login",
                data: myformdata,
                success: function (result) {
                    if (result == "Succes") {
                        window.location.href = "/Home/Index";                   
                    }
                    else if (result == "Failed") {
                        $("#lblError").text("Incorrect User Name Or Password");
                    }
                    else {
                        $("#ErrorLable").text("User Name Already Exits");
                        $("#btnCreateTeacher").prop('value', 'Save');
                        $("#myModal").modal("show");
                    }

                }

            })
        }


</script>

