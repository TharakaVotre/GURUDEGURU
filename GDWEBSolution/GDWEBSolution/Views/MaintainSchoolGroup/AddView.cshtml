@model GDWEBSolution.Models.Maintenance.SchoolGroupModel

<div>
   
    <form id="myForm" class="form-horizontal">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Add New School Group</h4>
        </div>
        <div class="modal-body">

           
            <div class="form-group">
                @Html.LabelFor(m => m.GroupName, new { @class = "col-sm-3 control-label" })
                <div class="col-sm-8">
                    @Html.TextBoxFor(model => model.GroupName, new { @class = "form-control", @placeholder = "Group Name" })
                    <span class="help-block m-b-none" id="NameError"></span>
                </div>
            </div>

         </div>
        <div class="modal-footer">
           <a href="#" id="btnSubmit" class="btn btn-primary">Save</a>
        </div>
    </form>



</div>
<script>

    $(document).ready(function () {

        $("#btnSubmit").click(function (e) {
            debugger
            var Name = $('#GroupName');
            var NameError = $('#NameError');
           



           
            if (!Name.val()) {
                // Add errors highlight
                Name.closest('.form-group').removeClass('has-success').addClass('has-error');
                $("#NameError").text("Required");
                // Stop submission of the form
               // e.preventDefault();
                return;
            }
          
           
            var myformdata = $("#myForm").serialize();
           
            $.ajax({

                type: "POST",
                url: "/MaintainSchoolGroup/Create",
                data: myformdata,
                success: function () {
                    
                    $("#myModal").modal("hide");
                    window.location.href = "/MaintainSchoolGroup/Index";

                }

            })
        })

    })


</script>