@model IEnumerable<GDWEBSolution.Models.Maintenance.SubjectCategoryModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">

        <h3>Subject Category</h3>

        <!-- Zero Configuration Table -->
        <div class="panel panel-default">
            <div class="panel-heading"><button type="button" class="btn btn-primary" onclick="ShowView(1)"><span class="fa fa-plus"></span> Add New</button></div>
            <div class="panel-body">
                <table id="zctb" class="display table table-bordered table-hover" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.SubjectCategoryId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SubjectCategoryName)
                            </th>
                           
                            <th>
                                @Html.DisplayNameFor(model => model.CreatedBy)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CreatedDate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ModifiedBy)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ModifiedDate)
                            </th>
                            <th style="max-width:130px !important"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SubjectCategoryId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SubjectCategoryName)
                                    </td>
                                   
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CreatedBy)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CreatedDate)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ModifiedBy)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ModifiedDate)
                                    </td>
                                    <td>
                                        <a href="#" class="hvr-buzz-out"  onclick='EditView("@item.SubjectCategoryId")'><span class="fa fa-pencil"></span> Edit </a>
                                        <a href="#" class="hvr-buzz-out"  onclick='DeleteView("@item.SubjectCategoryId")'><span class="fa fa-trash"></span> Delete</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<!-- Modal -->

    <div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content" id="MyModelBody">

        </div>

    </div>
</div>
@*<script src="~/Scripts/jquery-3.1.1.min.js"></script>*@
<script>
    var opendiv = 0;
    var ShowView = function (bookid) {
        var Url = "/MaintainSubjectCategory/ShowAddView?code=" + bookid;
        $("#MyModelBody").load(Url, function () {
            $("#myModal").modal("show");
            opendiv = 1;
        })
    }

    var EditView = function (CategoryId) {
        var Url = "/MaintainSubjectCategory/Edit?Code=" + CategoryId;
        $("#MyModelBody").load(Url, function () {
            $("#myModal").modal("show");
            opendiv = 1;
        })
    }

    var DeleteView = function (CategoryId) {
        var Url = "/MaintainSubjectCategory/Delete?Code=" + CategoryId;
        $("#MyModelBody").load(Url, function () {
            $("#myModal").modal("show");
            opendiv = 1;
        })

        
       
    }
     
    $(function () {
        $("body").click(function (e) {
            if (opendiv == 1) {
                if (e.target.id == "MyModelBody" || $(e.target).parents("#MyModelBody").size()) {
                   // alert("In");
                }
                else {
                   // alert("out");
                    window.location.href = "/MaintainSubjectCategory/Index";
                }
               
            }
        });
    })
</script>

