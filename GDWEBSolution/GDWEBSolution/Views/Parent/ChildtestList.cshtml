@model IEnumerable<GDWEBSolution.Models.Parent.ParentModel>
<div class="row">
    <div class="col-md-12">
        @if (Model.Count() == 0)
        {
            <div class="col-md-12">
                <div class="well">
                    No Child is set to display
                </div>
            </div>
        }
        else
        {
            foreach (var item in Model)
            {

                @*<div class="row">*@
                <div class="col-md-6">
                    <div class="well">
                        <i class="glyphicon glyphicon-bell" aria-hidden="true"></i>
@Html.HiddenFor(modelItem => item.ParentId)
    @Html.HiddenFor(modelItem => item.StudentId)
                       @Html.DisplayFor(modelItem => item.StudentName)
                        <button type="button" class="close" onclick='Deletechild("@item.ParentId","@(item.StudentId)");'>&times;</button>
                    </div>
                </div>

                @*</div>*@
            }
        }
    </div>
</div>
<script>

    function Deletechild(ParentId, StudentId) {
        debugger
        var Url = "/Parent/DeleteChild?ParentId=" + ParentId + "&StudentId=" + StudentId;
        $("#DeleteModelBody").load(Url, function () {
            $("#deleteModel").modal("show");
        })
    }
</script>

