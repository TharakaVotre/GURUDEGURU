@model IEnumerable<GDWEBSolution.Models.Parent.ParentModel>
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-md-12">
        <h3>Parent</h3>
        <!-- Zero Configuration Table -->
        <div class="panel panel-default">
            <div class="panel-heading"><button type="button" class="btn btn-primary" onclick="ShowView(1)"><span class="fa fa-plus"></span> Add New</button></div>
            @*<div class="panel-heading"><button type="button" class="btn btn-primary" onclick="ShowView2(1)"><span class="fa fa-plus"></span> Add file</button></div>*@
            <div class="panel-body">
                <table id="zctb" class="display table table-bordered table-hover" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.ParentName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ParentId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.RelationshipId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PersonalEmail)
                            </th>
                            
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ParentName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ParentId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.RelationshipId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PersonalEmail)
                                    </td>


                               

                                    <td>
                                        <a href="#" class="hvr-buzz-out" onclick="DetailView('@item.ParentId')"> Details </a>|
                                        <a href="#" class="hvr-buzz-out" onclick="EditView('@item.ParentId','@item.ParentName')"> Edit </a>|

                                        <a href="#" class="hvr-buzz-out" onclick="DeleteView('@item.ParentId')"> Delete</a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>






<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content" id="MyModelBody">
        </div>
    </div>
</div>
@*<script src="~/Scripts/jquery-3.1.1.min.js"></script>*@
<script>
    var ShowView = function (bookid) {
        var Url = "/Parent/Create?id=" + bookid;
        window.location.href = Url;
    }

    var ShowView2 = function (bookid) {
        var Url = "/School/Create2?id=" + bookid;
        window.location.href = Url;
    }

    var EditView = function (SchoolId, StudentId) {
        var Url = "/Student/Edit?SchoolId=" + SchoolId + "&StudentId=" + StudentId;
        //$("#MyModelBody").load(Url, function () {
        //    $("#myModal").modal("show");
        //})
        window.location.href = Url;
    }
    var DetailView = function (ParentId) {
        var Url = "/Parent/Details?ParentId=" + ParentId;
        //$("#MyModelBody").load(Url, function () {
        //    $("#myModal").modal("show");
        //})
        window.location.href = Url;
    }

    var DeleteView = function (CategoryId) {
        var Url = "/School/Delete?SchoolId=" + CategoryId;
        $("#MyModelBody").load(Url, function () {
            $("#myModal").modal("show");
        })
    }
</script>