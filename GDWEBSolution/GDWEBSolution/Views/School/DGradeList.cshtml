@model IEnumerable<GDWEBSolution.Models.Schools.SchoolGradeModel>
<div class="row">
    <div class="col-md-12">
        @if (Model.Count() == 0)
        {
            <div class="col-md-12">
                <div class="well">
                    No Grade is set to display
                </div>
            </div>
        }
        else
        {
            foreach (var item in Model)
            {

                @*<div class="row">*@
                <div class="col-md-6">
                    <div class="well">
                        <i class="glyphicon glyphicon-bell"  aria-hidden="true"></i>
                        @Html.DisplayFor(modelItem => item.GradeName)
                        @*<button type="button" class="close" style="visibility:hidden" onclick='DeleteSchoolGrade("@item.SchoolId","@(item.GradeId)");'>&times;</button>*@
                    </div>
                </div>

                @*</div>*@
            }
        }
    </div>
</div>
<script>

    function DeleteSchoolGrade( SchoolId, GradeId) {
        debugger
        var Url = "/School/DeleteGrade?SchoolId=" + SchoolId + "&GradeId=" + GradeId;
        $("#DeleteModelBody").load(Url, function () {
            $("#deleteModel").modal("show");
        })
    }
</script>