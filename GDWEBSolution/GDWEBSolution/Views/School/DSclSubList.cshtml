@model IEnumerable<GDWEBSolution.Models.Schools.SchoolSubjectModel>
<div class="row">
    <div class="col-md-12">
        @if (Model.Count() == 0)
        {
            <div class="col-md-12">
                <div class="well">
                    No Subject is set to displays
                </div>
            </div>
        }
        else
        {
            foreach (var item in Model)
            {

                @*<div class="row">*@
                <div class="col-md-6">
                    <div class="well">
                        <i class="glyphicon glyphicon-bell" aria-hidden="true"></i>
                        @Html.HiddenFor(model => item.SchoolId)
                        @Html.HiddenFor(model => item.SubjectId)
                        @Html.HiddenFor(model => item.AcademicYear)
                        @Html.DisplayFor(modelItem => item.SubjectName)
                        @*<button type="button" class="close" onclick='DeleteSchoolSubjet("@item.SchoolId","@(item.SubjectId)","@(item.AcademicYear)");'>&times;</button>*@
                    </div>
                </div>

                @*</div>*@
            }
        }
    </div>
</div>
<script>

    function DeleteSchoolSubjet(SchoolId, SubjectId, AcademicYear) {
        debugger
        var Url = "/School/DeleteSchoolSubjects?SchoolId=" + SchoolId + "&SubjectId=" + SubjectId + "&AcademicYear=" + AcademicYear;
        $("#DeleteModelBody").load(Url, function () {
            $("#deleteModel").modal("show");
        })
    }
</script>

