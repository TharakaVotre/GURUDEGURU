@model GDWEBSolution.Models.Schools.SchoolModel


<div>
    <form id="myForm" class="form-horizontal">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h5 class="modal-title">Are you sure you want to Delete this Application Status ? @Html.HiddenFor(model => model.SchoolId)</h5>
        </div>
        <div class="modal-footer">
            <a href="#" id="btnSubmit" class="btn btn-primary">YES</a>
            <a href="#" id="btnNo" class="btn btn-default">NO</a>
        </div>
    </form>
    @*    <div style="text-align: center; display: none" id="loaderDiv">
            Loading
        </div>*@
</div>
<h2>Delete</h2>

<script>

    $(document).ready(function () {

        $("#btnSubmit").click(function (e) {
            debugger
            var myformdata = $("#myForm").serialize();
            $.ajax({

                type: "POST",
                url: "/School/Delete",
                data: myformdata,
                success: function () {
                    //$("#loaderDiv").hide();
                    $("#myModal").modal("hide");
                    window.location.href = "/School/Index";

                }

            })
        })

        $("#btnNo").click(function (e) {
            debugger
            $("#myModal").modal("hide");
        })

    })


</script>
