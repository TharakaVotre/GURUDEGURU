@model  IEnumerable<GDWEBSolution.Models.Schools.SchoolHouseModel>

<div class="row">
    <div class="col-md-12">
        @if (Model.Count() == 0)
        {
            <div class="col-md-12">
                <div class="well">
                    No House is set to display
                </div>
            </div>
        }
        else
        {
            foreach (var item in Model)
            {

                @*<div class="row">*@
                <div class="col-md-6">
                    <div class="well">
                        <i class="glyphicon glyphicon-bell" aria-hidden="true"></i>
                        @Html.HiddenFor(model => item.HouseId)
                        @Html.HiddenFor(model => item.SchoolId)
                        @Html.DisplayFor(modelItem => item.HouseName)
                        <button type="button" class="close" onclick='DeleteSchoolHouse("@item.HouseId","@(item.HouseName)","@(item.SchoolId)");'>&times;</button>
                    </div>
                </div>

                @*</div>*@
            }
        }
    </div>
</div>
<script>

    function DeleteSchoolHouse(HouseId, HouseName, SchoolId) {
        debugger
        var Url = "/School/DeleteHouse?HouseId=" + HouseId + "&HouseName=" + HouseName + "&SchoolId=" + SchoolId;
        $("#DeleteModelBody").load(Url, function () {
            $("#deleteModel").modal("show");
        })
    }
</script>