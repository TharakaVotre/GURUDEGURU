
@model  IEnumerable<GDWEBSolution.Models.Student.StudentExtraCModel>
<div class="row">
    <div class="col-md-12">
        @if (Model.Count() == 0)
        {
            <div class="col-md-12">
                <div class="well">
                    No  Activity is set to display
                </div>
            </div>
        }
        else
        {
            foreach (var item in Model)
            {

                @*<div class="row">*@
                <div class="col-md-6">
                    <div class="well">
                        <i class="glyphicon glyphicon-bell" aria-hidden="true"></i>
                        @Html.HiddenFor(model => item.ActivityCode)
                        @Html.HiddenFor(model => item.SchoolId)
                        @Html.HiddenFor(model => item.StudentId)
                        @Html.DisplayFor(modelItem => item.ActivityName)
                        <button type="button" class="close" onclick='DeleteStudentexc("@item.SchoolId","@(item.StudentId)","@(item.ActivityCode)");'>&times;</button>
                    </div>
                </div>

                @*</div>*@
            }
        }
    </div>
</div>
<script>

    function DeleteStudentexc(SchoolId, StudentId, ActivityCode) {
        debugger
        var Url = "/Student/Deletescexc?SchoolId=" + SchoolId + "&StudentId=" + StudentId + "&ActivityCode=" + ActivityCode;
        $("#DeleteModelBody").load(Url, function () {
            $("#deleteModel").modal("show");
        })
    }

</script>
