@model GDWEBSolution.Models.AnnualFunctions.StudentGradeAdvanceModel


<div>
   
    <form id="myForm" class="form-horizontal">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Edit Student Class</h4>
        </div>
        <div class="modal-body">
            <div class="form-group">
               @Html.HiddenFor(model=>model.StudentId)

                @Html.LabelFor(m => m.StudentName, new { @class = "col-sm-3 control-label" })
                <div class="col-sm-8">
                    @Html.TextBoxFor(model => model.StudentName, new { @class = "form-control", disabled = "disabled" })
                    
                </div>
            </div>

            <div class="form-group">

               
                @Html.LabelFor(m => m.ClassName, new { @class = "col-sm-3 control-label" })
                <div class="col-sm-8">
                    @Html.DropDownList("ClassId")
                    <span class="help-block m-b-none" id="NameError"></span>
                </div>
            </div>

            
        

               </div>
        <div class="modal-footer">

             <a href="#" id="btnSubmit" class="btn btn-primary">Save</a>
        </div>
    </form>


</div>
<script>

    $(document).ready(function () {

        $("#btnSubmit").click(function (e) {
            debugger
            

            var Name = $('#ClassId');
            var NameError = $('#NameError');


          
            // Check if there is an entered value
            if (!Name.val()) {
                // Add errors highlight
                Name.closest('.form-group').removeClass('has-success').addClass('has-error');
                $("#NameError").text("Required");
                // Stop submission of the form
               // e.preventDefault();
                return;
            }
            // Check if there is an entered value
           
           

            var myformdata = $("#myForm").serialize();
          
            $.ajax({

                type: "POST",
                url: "/StudentGradeAdvance/Edit",
                data: myformdata,
                success: function () {
                    //$("#loaderDiv").hide();
                    $("#myModal").modal("hide");
                    window.location.href = "/StudentGradeAdvance/Index";

                }

            })
        })

    })


</script>

