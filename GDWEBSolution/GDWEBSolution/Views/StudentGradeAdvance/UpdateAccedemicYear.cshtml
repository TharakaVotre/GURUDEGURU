
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class="col-md-12">
        <h3>Update Accedemic Year</h3>
        <div class="panel panel-default">
            <div class="panel-heading">

                <form id="myForm" method="post" action="UpdateAccYear" class="form-horizontal">
                    <div class="form-group">
                        <div class="col-sm-2">
                            <label>Accademic Year</label>
                        </div>
                        <div class="col-sm-2">
                            @Html.TextBox("AccYear")
                            
                        </div>

                        <div class="col-sm-2">
                            <button type="submit" class="btn btn-primary"><span class="fa fa-search"></span> Update</button>
                        </div>
                    </div>
                </form>
            </div>
         
    </div>
</div>

<style>
    #AccYear {
        border: 1px solid #e0e0e0;
        padding: 5px 8px;
        color: #616161;
        background: #fff;
        box-shadow: none !important;
        display: block;
        width: 100%;
        height: 32px;
        font-size: 14px;
        line-height: 1.45;
        border-radius: 2px;
        transition: border-color ease-in-out .15s, box-shadow ease-in-out .15s;
    }





    }
</style>