                                <div class="form-group">
                                    <lable class="col-sm-2 control-label">Grade</lable>
                                    <div class="col-sm-3">
                                        @Html.DropDownList("ClassGradeId", ViewBag.GradeId as List<SelectListItem>, "", new { @class = "form-control" })
