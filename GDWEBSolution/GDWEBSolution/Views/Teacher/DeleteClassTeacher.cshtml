@model GDWEBSolution.Models.Teacher.ClassTeacherModel
<div>
    <form id="FormTSDelete" class="form-horizontal">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h5 class="modal-title">Are You Sure You Want To Delete This Class Teacher ? @Html.HiddenFor(m=> m.TeacherId)</h5>
            @Html.HiddenFor(m=> m.GradeId)
            @Html.HiddenFor(m=> m.ClassId)
            @Html.HiddenFor(m=> m.AccedamicYear)
            @Html.HiddenFor(m=> m.SchoolId)
        </div>
        <div class="modal-footer">
            
            <a href="#" id="btnDSSubmit" class="btn btn-primary">YES</a>
            <a href="#" id="btnNo" class="btn btn-default">NO</a>
        </div>
    </form>
</div>
