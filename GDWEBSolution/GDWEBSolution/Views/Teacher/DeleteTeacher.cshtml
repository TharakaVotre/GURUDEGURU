@model GDWEBSolution.Models.TeacherModel


<div>
    <form id="FormTDelete" class="form-horizontal">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h5 class="modal-title">Are You Sure You Want To Delete This Teacher ? @Html.HiddenFor(m=> m.TeacherId)</h5>

        </div>
        <div class="modal-footer">
            
            <a href="#" id="btnTDeleteSubmit" class="btn btn-primary">YES</a>
            <a href="#" id="btnNo" class="btn btn-default">NO</a>
        </div>
    </form>

@*    <div style="text-align: center; display: none" id="loaderDiv">
