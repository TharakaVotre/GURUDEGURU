@model GDWEBSolution.Models.Teacher.TeacherModel


<div>
    <form id="FormTDelete" class="form-horizontal">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h5 class="modal-title">Are You Sure You Want To Delete This Teacher ? @Html.HiddenFor(m=> m.TeacherId)</h5>
        </div>
        <div class="modal-footer">
            
            <a href="#" id="btnTDeleteSubmit" class="btn btn-primary">YES</a>
            <a href="#" id="btnNo" class="btn btn-default">NO</a>
        </div>
    </form>
</div>
<script>

    $(document).ready(function () {
        $("#btnTDeleteSubmit").click(function (e) {
            var myformdata = $("#FormTDelete").serialize();
            $.ajax({
                type: "POST",
                url: "/Teacher/DeleteTeacher",
                data: myformdata,
                success: function (result) {
                    $("#myModal").modal("hide");
                    if (result != "Error") {
                        debugger
                        window.location.href = "/Teacher/Index";
                    }
                }
            })
        })
        $("#btnNo").click(function (e) {
            debugger
            $("#myModal").modal("hide");
        })

    })
</script>