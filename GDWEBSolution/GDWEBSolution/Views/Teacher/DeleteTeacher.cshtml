                type: "POST",
                url: "/Teacher/DeleteTeacher",
                data: myformdata,
                success: function (result) {
                    //$("#loaderDiv").hide();
                    $("#myModal").modal("hide");
                    if (result != "Error") {
                        debugger
                        window.location.href = "/Teacher/Index";
                    }



                }

            })
        })

        $("#btnNo").click(function (e) {
            debugger
            $("#deleteModel").modal("hide");
        })

    })


</script>