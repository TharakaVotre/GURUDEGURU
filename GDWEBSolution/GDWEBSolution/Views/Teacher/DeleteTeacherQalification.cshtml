@model GDWEBSolution.Models.Teacher.QualificationModel
<div>
    <form id="FormQDelete" class="form-horizontal">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h5 class="modal-title">Are You Sure You Want To Delete This Teacher Qualification ? @Html.HiddenFor(m => m.SchoolId)</h5>
            @Html.HiddenFor(m => m.Teacher_Id)
            @Html.HiddenFor(m => m.QualificationId)
        </div>
        <div class="modal-footer">

            <a href="#" id="btnQDSubmit" class="btn btn-primary">YES</a>
            <a href="#" id="btnNo" class="btn btn-default">NO</a>
        </div>
    </form>
</div>
<script>
    $(document).ready(function () {
        $("#btnQDSubmit").click(function (e) {
            debugger
            var myformdata = $("#FormQDelete").serialize();
            $.ajax({
                type: "POST",
                url: "/Teacher/DeleteQualification",
                data: myformdata,
                success: function (result) {
                    if (result != "Error") {
                        $('#showqualification').load('/Teacher/ShowTeacherQualification?TeacherId=' + result);
                    }
                    $("#deleteModel").modal("hide");
                }
            })
        })
        $("#btnNo").click(function (e) {
            debugger
            $("#deleteModel").modal("hide");
        })

    })
</script>
