                url: "/Teacher/DeleteTeacherSubject",
                data: myformdata,
                success: function (result) {
                    //$("#loaderDiv").hide();
                    if (result != "Error") {
                        debugger
                        //window.location.href = "/Teacher/Create";
                       // $("#TeacherID").val(result);
                       //  $('#ResultDIV').load('/Teacher/ShowTeacherQualificatoin', ShowTeacherQualificatoinAction);
                        $('#showsubjects').load('/Teacher/ShowTeacherSubjects?TeacherId=' + result);
                    }
                    $("#deleteModel").modal("hide");


                }

            })
        })

        $("#btnNo").click(function (e) {
            debugger
            $("#deleteModel").modal("hide");
        })

    })


</script>