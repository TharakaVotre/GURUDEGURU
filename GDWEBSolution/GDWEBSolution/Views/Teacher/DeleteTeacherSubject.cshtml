@model GDWEBSolution.Models.Teacher.TSubjectModel


<div>
    <form id="FormTSDelete" class="form-horizontal">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h5 class="modal-title">Are You Sure You Want To Delete This Teacher Subject ? @Html.HiddenFor(m=> m.TeacherSubjectSeqNo)</h5>
            @Html.HiddenFor(m=> m.Teacher_ID)
        </div>
        <div class="modal-footer">
            
            <a href="#" id="btnDSSubmit" class="btn btn-primary">YES</a>
            <a href="#" id="btnNo" class="btn btn-default">NO</a>
        </div>
    </form>

@*    <div style="text-align: center; display: none" id="loaderDiv">
        Loading
    </div>*@

</div>
