@model GDWEBSolution.Models.TeacherModel

@{
    ViewBag.Title = "Edit Teacher Details";
}

<div class="row">
    <div class="col-md-12">

        <h3>Edit Teacher</h3>
        <div class="panel panel-default">
            <div class="panel-heading">Teacher Details  </div>
            <div class="panel-body">
                <form id="FrmEDITT" class="form-horizontal">
                    <div class="form-group">
                        @Html.LabelFor(m => m.TeacherCategoryId, new { @class = "col-sm-2 control-label" })
                        @Html.HiddenFor(m=>m.TeacherId)
                        <div class="col-sm-7">
                            @Html.DropDownListFor(model => model.TeacherCategoryId, ViewBag.TeacherCategoryDrpDown as SelectList, "", new { @class = "form-control", @placeholder = "Name of the Teacher" })
                        </div>
                        <div class="col-sm-3">
                            @Html.ValidationMessageFor(model => model.TeacherCategoryId, null, new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Name, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-7">
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @placeholder = "Name of the Teacher" })
                        </div>
                        <div class="col-sm-3">
                            @Html.ValidationMessageFor(model => model.Name, null, new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.UserId, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-6">
                            @Html.TextBoxFor(model => model.UserId, new { @class = "form-control", @placeholder = "User Name" ,@readonly = "readonly"})
                        </div>
                        <div class="col-sm-3">
                            @*@Html.ValidationMessageFor(model => model.Name, new { @class = "form-control", @placeholder = "Name of the Teacher" })*@
                            @Html.ValidationMessageFor(model => model.UserId, null, new { @class = "text-danger"  })

                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.DateOfBirth, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-3">
                            @Html.TextBoxFor(model => model.DateOfBirth, new { @class = "form-control",  @type = "date", @placeholder = "mm/dd/yyyy" })
                        </div>
                        <div class="col-sm-3">
                            @Html.ValidationMessageFor(model => model.DateOfBirth, null, new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Address1, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-7">
                            @Html.TextBoxFor(model => model.Address1, new { @class = "form-control input-lg mb", @placeholder = "Address Line 1" })
                            @Html.TextBoxFor(model => model.Address2, new { @class = "form-control mb", @placeholder = "Address Line 2" })
                            @Html.TextBoxFor(model => model.Address3, new { @class = "form-control input-sm", @placeholder = "Address Line 3" })
                        </div>
                        <div class="col-sm-3">
                            @Html.ValidationMessageFor(model => model.Address1, null, new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="hr-dashed"></div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Telephone, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-7">
                            @Html.TextBoxFor(model => model.Telephone, new { @class = "form-control", @placeholder = "Telephone Number" })
                        </div>
                        <div class="col-sm-3">
                            @Html.ValidationMessageFor(model => model.Telephone, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="hr-dashed"></div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Gender, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-7">
                            <div class="radio radio-inline">
                                @Html.RadioButtonFor(m => m.Gender, "M")
                                <label for="radio1">
                                    Male
                                </label>
                            </div>
                            <div class="radio radio-inline">
                                @Html.RadioButtonFor(m => m.Gender, "F")
                                <label for="radio1">
                                    Female
                                </label>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            @Html.ValidationMessageFor(model => model.Gender, null, new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="hr-dashed"></div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Description, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-7">
                            @Html.TextBoxFor(model => model.Description, new { @class = "form-control", @placeholder = "Teacher Description" })
                        </div>
                        <div class="col-sm-3">
                            @Html.ValidationMessageFor(model => model.Description, null, new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="hr-dashed"></div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.EmployeeNo, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-3">
                            @Html.TextBoxFor(model => model.EmployeeNo, new { @class = "form-control", @placeholder = "Employee No" })
                            @Html.ValidationMessageFor(model => model.EmployeeNo, null, new { @class = "text-danger" })
                        </div>
                        @Html.LabelFor(m => m.NIC, new { @class = "col-sm-1 control-label" })
                        <div class="col-sm-3">
                            @Html.TextBoxFor(model => model.NIC, new { @class = "form-control", @placeholder = "NIC" })
                            @Html.ValidationMessageFor(model => model.NIC, null, new { @class = "text-danger" })
                            @*@Html.ValidationMessageFor(model => model.Name, new { @class = "form-control", @placeholder = "Name of the Teacher" })*@
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.DrivingLicense, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-3">
                            @Html.TextBoxFor(model => model.DrivingLicense, new { @class = "form-control", @placeholder = "Drivers License" })
                            @Html.ValidationMessageFor(model => model.DrivingLicense, null, new { @class = "text-danger" })
                        </div>
                        @Html.LabelFor(m => m.Passport, new { @class = "col-sm-1 control-label" })
                        <div class="col-sm-3">
                            @Html.TextBoxFor(model => model.Passport, new { @class = "form-control", @placeholder = "Passport Id" })
                            @Html.ValidationMessageFor(model => model.Passport, null, new { @class = "text-danger" })
                            @*@Html.ValidationMessageFor(model => model.Name, new { @class = "form-control", @placeholder = "Name of the Teacher" })*@
                        </div>
                    </div>
                    <div class="hr-dashed"></div>


                    <div class="hr-dashed"></div>
                    <div class="form-group">
                        <div class="col-sm-8 col-sm-offset-2">
                            @*<button class="btn btn-default" type="submit">Cancel</button>*@
                            @*<a href="#" id="btnCreateTeacher" class="btn btn-primary">Save</a>*@
                            <button type="reset" value="Save" id="btnEditTeacher" onclick="EditTeacher()" class="btn btn-primary"><span class="fa fa-bookmark"></span> Save</button>
                        </div>
                    </div>



                </form>

            </div>
        </div>
    </div>
</div>

<div id="SuccesModel" class="modal fade" role="dialog" tabindex="-1" aria-labelledby="myModalLabel">
    <div class="modal-dialog">

        <!-- Modal content-->

        <div class="modal-content" id="SuccessModelBody">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Successful !</h4>
            </div>
            <div class="modal-body">
                <label id="SuccesLable" class="control-label" style="color: #3bc91f"></label>
            </div>
        </div>
    </div>
</div>
<script>

    var EditTeacher = function () {
        //debugger
        var myformdata = $("#FrmEDITT").serialize();

        if (!$("#FrmEDITT").valid()) {
            return;
        }

        $("#btnEditTeacher").prop('value', 'Saving Details ...');
        $.ajax({

            type: "POST",
            url: "/Teacher/EditTeacher",
            data: myformdata,
            success: function (result) {
                //$("#loaderDiv").hide();
                // $("#myModal").modal("hide");
                if (result != "Error") {
                    debugger
                    $("#SuccesLable").text("Teacher Details Changed Succesfully");
                    $("#SuccesModel").modal("show");
                    //window.location.reload = "/Teacher/EditTeacher?TeacherId=" + result;
                }
                else
                {

                }

            }

        })
    }


</script>