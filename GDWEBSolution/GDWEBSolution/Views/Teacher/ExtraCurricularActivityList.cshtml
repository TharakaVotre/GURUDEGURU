@model IEnumerable<GDWEBSolution.Models.Teacher.ExtraActivityModel>
<div class="row">
    <div class="col-md-12">
        @if (Model.Count() == 0)
        {
            <div class="col-md-12">
                <div class="well">
                    No Activity is setted to display
                </div>
            </div>
        }
        else
        {
            foreach (var item in Model)
            {                          
            <div class="col-md-6">
                <div class="well">
                    <i class="fa fa-asterisk" aria-hidden="true"></i>
                    @Html.DisplayFor(modelItem => item.ActivityName)
                    <button type="button" class="close" onclick='DeleteExActivity(@item.TeacherID,"@(item.SchoolId)","@(item.ActivityCode)");' >&times;</button>
                </div>
            </div>
            }
        }
    </div>
</div>


<script>
    function DeleteExActivity(Teacher, School, Activity) {
        debugger
        var Url = "/Teacher/DeleteExActivity?Teacherid=" + Teacher + "&Schoolid=" + School + "&Activitycode=" + Activity;
        $("#DeleteModelBody").load(Url, function () {
            $("#deleteModel").modal("show");
        })
    }
</script>
