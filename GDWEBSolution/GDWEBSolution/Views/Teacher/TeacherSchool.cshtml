@model GDWEBSolution.Models.Teacher.TeacherModel
<form id="FrmTS" class="form-horizontal">
    <div class="form-group">
        @Html.LabelFor(m => m.TeacherId, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-3">
            @Html.DropDownListFor(model => model.TeacherId, ViewBag.TeacherList as SelectList, "", new { @class = "form-control", @placeholder = "Name of the Teacher" ,@onchange = "loadQualification()"})
        </div>
        @Html.LabelFor(m => m.TeacherId, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-3">
            @Html.DropDownListFor(model => model.SchoolID, ViewBag.QualificationList as SelectList, "", new { @class = "form-control", @placeholder = "Name of the Teacher" })
        </div>
        <div class="col-sm-2">
        <button type="reset"  id="btnAddTSchool" onclick="AddTSchool()" class="btn btn-primary"><span class="fa fa-bookmark"></span> Save</button>
            </div>
    </div>
    <div class="hr-dashed"></div>                           
    </form>
<script>

    var AddTSchool = function () {
        var myformdata = $("#FrmTS").serialize();
        $.ajax({

            type: "POST",
            url: "/Teacher/AddQualification",
            data: myformdata,
            success: function (result) {
                if (result != "Exception" && result != "Exits") {
                    $("#TeacherId").val(result);
                    $('#showqualification').load('/Teacher/ShowTeacherQualification?TeacherId=' + result);
                    $("#SuccesLable").text("Qualification Added");
                    $("#SuccesModel").modal("show");
                }
                else if (result == "Exception") {
                    $("#ErrorLable").text("Exception Error Occurd");
                    $("#myModal").modal("show");
                }
                else if (result == "Exits") {
                    $("#ErrorLable").text("This Qualification is Already Assigned to this Teacher");
                    $("#myModal").modal("show");
                }
                else {
                    $("#ErrorLable").text("An Error Occured ! Please Try Again Later");
                    $("#myModal").modal("show");
                }
            }
        })
    }
    var loadQualification = function () {
        debugger
        $('#showqualification').load('/Teacher/ShowTeacherQualification?TeacherId=' + $('#TeacherId').val());
    }
</script>