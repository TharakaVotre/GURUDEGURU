@model IEnumerable<GDWEBSolution.Models.Teacher.TSubjectModel>
<div class="row">
    <div class="col-md-12">
        @if (Model.Count() == 0)
        {
            <div class="col-md-12">
                <div class="well">
                    No Subject is setted to display ..
                </div>
            </div>
        }
        else
        {
            <table id="" class="display table  table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Grade</th>
                        <th>Class</th>
                        <th>Subject</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {             
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.GradeName) </td>
                            <td>@Html.DisplayFor(modelItem => item.ClassId) </td>
                            <td>@Html.DisplayFor(modelItem => item.SubjectName)</td>
                        </tr>                       
                    }
                </tbody>
            </table>
        }
    </div>
</div>
