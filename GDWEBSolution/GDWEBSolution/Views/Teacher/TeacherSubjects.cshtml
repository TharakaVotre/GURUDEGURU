@model IEnumerable<GDWEBSolution.Models.Teacher.TSubjectModel>
<div class="row">
    <div class="col-md-12">
        @if (Model.Count() == 0)
        {
            <div class="col-md-11">
                <div class="well">
                    No Subject is setted to display
                </div>
            </div>
        }
        else
        {
            <table id="" class="display table  table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Grade</th>
                        <th>Class</th>
                        <th>Subject</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                              
@*<div class="row">*@
                            
                            
                        <tr>

                            <td>@Html.DisplayFor(modelItem => item.GradeName) </td>
                            <td>@Html.DisplayFor(modelItem => item.ClassId) </td>
                            <td>@Html.DisplayFor(modelItem => item.SubjectName) <button type="button" class="close" onclick='DeleteTeacherSubject(@item.TeacherSubjectSeqNo,@item.Teacher_ID);' >&times;</button></td>
                        </tr>
                            
                    }
                </tbody>
            </table>
        }
    </div>
</div>
<script>

    function DeleteTeacherSubject(Tsubject,tid) {
        debugger
        var Url = "/Teacher/DeleteTeacherSubject?TSubjectId=" + Tsubject + "&TeacherId=" + tid;
        $("#DeleteModelBody").load(Url, function () {
            $("#deleteModel").modal("show");
        })
    }
</script>