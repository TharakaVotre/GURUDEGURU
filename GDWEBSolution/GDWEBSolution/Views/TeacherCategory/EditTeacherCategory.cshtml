@model GDWEBSolution.Models.TeacherCategoryModel
<div>
    <form id="myForm" class="form-horizontal">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Edit Teacher Category</h4>
        </div>
        <div class="modal-body">

            <div class="form-group">
                @Html.HiddenFor(m => m.TeacherCategoryId)
                @Html.LabelFor(m => m.TeacherCategoryName, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-8">
                    @Html.TextBoxFor(model => model.TeacherCategoryName, new { @class = "form-control", @placeholder = "Teacher Category Name" })
                    <span class="help-block m-b-none" id="TeacherCategoryNameError"></span>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.IsActive, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-8">
                    @Html.CheckBoxFor(m => m.IsActiveBool, new { @class = "checkbox checkbox-primary" })
                    <span class="help-block m-b-none" id="IsActiveError" style="color: red"></span>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <a href="#" id="btnSubmit" class="btn btn-primary">Save</a>
        </div>
    </form>
</div>
<script>
    $(document).ready(function () {
        $("#btnSubmit").click(function (e) {
            debugger
            var TeacherCategoryName = $('#TeacherCategoryName');
            var TeacherCategoryNameError = $('#TeacherCategoryNameError');
            if (!TeacherCategoryName.val()) {
                TeacherCategoryName.closest('.form-group').removeClass('has-success').addClass('has-error');
                $("#TeacherCategoryNameError").text("Required");
                return;
            }
            var myformdata = $("#myForm").serialize();
            $.ajax({

                type: "POST",
                url: "/TeacherCategory/Edit",
                data: myformdata,
                success: function () {
                    $("#myModal").modal("hide");
                    window.location.href = "/TeacherCategory/Index";
                }
            })
        })
    })
</script>

