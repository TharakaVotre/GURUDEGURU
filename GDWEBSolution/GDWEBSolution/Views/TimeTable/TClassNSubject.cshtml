@model GDWEBSolution.Models.TimeTable.TimeTableModel
<div class="col-lg-4">
    <div role="form" class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-2" for="inputEmail1">Class </label>
            <div class="col-sm-8">
                @Html.DropDownListFor(model => model.ClassId, ViewBag.GradeClassse as SelectList, "", new { @class = "select2_Class form-control", @onchange = "" })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2" for="inputPassword1">Subject </label>
            <div class="col-sm-8">
                @Html.DropDownListFor(model => model.SubjectId, ViewBag.GradeSubjectList as SelectList, "", new { @class = "select2_Subject form-control", })
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2" for="inputPassword1">Period </label>
            <div class="col-sm-8">
                @Html.TextBoxFor(model => model.PeriodSeqNo, new { @class = "form-control", @placeholder = "Period Number" ,@maxlength = "1" })
            </div>
        </div>
    </div>
</div>
<div class="col-lg-4">
    <div role="form" class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-2" for="inputEmail1">Day  </label>
            <div class="col-sm-8">
                @Html.TextBoxFor(model => model.Day, new { @class = "form-control", @placeholder = "Period Number"})
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2" for="inputEmail1">From  </label>
            <div class="col-sm-8">
                @Html.TextBoxFor(model => model.FromTime_String, new { @class = "form-control", @placeholder = "Period Number"})
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2" for="inputPassword1">To  </label>
            <div class="col-sm-8">
                @Html.TextBoxFor(model => model.ToTime_String, new { @class = "form-control", @placeholder = "Period Number"})
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-info pull-right">Submit</button>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#FromTime_String').timepicki();
        $('#ToTime_String').timepicki();

        $(".select2_Class").select2({
            placeholder: "Select a Class",
            allowClear: true,
            width: '100%'
        });
        $(".select2_Subject").select2({
            placeholder: "Select a Subject",
            allowClear: true,
            width: '100%'
        });
    });
</script>