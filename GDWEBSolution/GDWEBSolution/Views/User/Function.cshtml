    //        $("#myModal").modal("show");
    //    })
    //}

    var DeleteView = function (CategoryId, FunctionID) {
        debugger
        var Url = "/User/DeleteUCFunction?CategoryId=" + CategoryId + "&FunctionId=" + FunctionID;
        $("#MyModelBody").load(Url, function () {
            $("#myModal").modal("show");
        })
    }
</script>
